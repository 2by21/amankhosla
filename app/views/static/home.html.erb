<div class="section" id="section6">
    <% if @video %>
        <iframe id="video-frame" width="100%" height="315" src="//www.youtube.com/embed/<%= @video.link %>" frameborder="0" allowfullscreen></iframe>
        <h1 id="video-title"><%= @video.title %></h1>
        <p id="video-body"><%= @video.body %></p>
    <% end %>

    <ul class="video-preview-ul">
        <% @videos.each do |video| %>
            <li class="video" data-url="<%= video.link %>" data-title="<%= video.title %>" data-body="<%= video.body %>">
                <img class="video-preview" src="http://img.youtube.com/vi/<%= video.link %>/0.jpg"/>
                <p><%= video.title %></p>
            </li>
        <% end %>
    </ul>
</div>

<div class="section" id="section7">
    <img class="image-scale" id="spear-wolf" src="assets/spear_wolf.png"/>
</div>

<div class="section" id="section8">
    <ul>
        <li class="tab-link" data-tab="bio"><a href="#">BIO</a></li>
        <li class="tab-link" data-tab="photos"><a href="#">PHOTOS</a></li>
        <li class="tab-link" data-tab="tools"><a href="#">TOOLS</a></li>
    </ul><br>

    <div id="bio" class="tab-content active-tab">
        <%= @bio.text %>
    </div>

    <div id="photos" class="tab-content" style="display: none;">
        <div class="row">
            <% @galleries.each do |gallery, index| %>
                <div class="col-sm-6">
                    <div>
                        <img class="gallery-photo" data-gallery="<%= gallery.id %>" src="http://s3-ec.buzzfed.com/static/enhanced/webdr02/2013/4/16/14/enhanced-buzz-21680-1366138667-19.jpg"/>
                    </div>

                    <div class="modal fade" id="gallery-<%= gallery.id %>">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <%= image_tag gallery.images.first.photo.url(:original), data: { parent: index } %>
                                </div>
                                <div class="modal-footer">
                                    <ul>
                                        <% gallery.images.each do |image| %>
                                            <li class="gallery-li"><%= image_tag image.photo.url(:icon), data: { original: image.photo.url(:original), parent: index } %></li>
                                        <% end %>
                                    </ul>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                </div>
            <% end %>
        </div>
    </div>

    <div id="tools" class="tab-content" style="display: none;">
        <ul>
            <% @tools.each do |tool| %>
                <li><%= link_to tool.text, tool.link %></li>
            <% end %>
        </ul>
    </div>

</div>

<div class="section" id="section9">
    <img class="image-scale" id="big_face" src="assets/big_face_image.png"/>
</div>

<div class="section" id="section10">

    <h1>Shows / Clinics</h1>
    <table class="table">
        <thead>
            <tr>
                <th>WHAT</th>
                <th>WHERE</th>
                <th>WHEN</th>
                <th>HOW</th>
            </tr>
        </thead>
        <tbody>
            <% @shows.each do |show| %>
                <tr>
                    <td><%= show.what %></td>
                    <td><%= show.where %></td>
                    <td><%= show.when.strftime("%m/%d/%y %H%p") %></td>
                    <td><a href="<%= show.how %>">BUY</a></td>
                </tr>
            <% end %>
        </tbody>
    </table>

</div>
