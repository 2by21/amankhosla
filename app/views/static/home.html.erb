<div class="section" id="section10">
    <a class="anchor" id="shows"></a>

    <h1>Shows / Clinics</h1>
    <table class="table">
        <thead>
            <tr>
                <th>WHAT</th>
                <th>WHERE</th>
                <th>WHEN</th>
                <th>HOW</th>
            </tr>
        </thead>
        <tbody>
            <% @shows.each do |show| %>
                <tr>
                    <td><%= show.what %></td>
                    <td><%= show.where %></td>
                    <td><%= show.when.strftime("%m/%d/%y %H%p") %></td>
                    <td><a href="<%= show.how %>">BUY</a></td>
                </tr>
            <% end %>
        </tbody>
    </table>

</div>
