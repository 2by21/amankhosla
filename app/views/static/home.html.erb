<div class="section" id="section8">
    <ul class="row tab-link-ul">
        <li class="tab-link active-tab-link col-sm-4" data-tab="bio"><a href="#">BIO</a></li>
        <li class="tab-link col-sm-4" data-tab="photos"><a href="#">PHOTOS</a></li>
        <li class="tab-link col-sm-4" data-tab="tools"><a href="#">TOOLS</a></li>
    </ul><br>

    <div id="other" class="tab-content">
        <ul>
            <% @projects.each_with_index do |project, index| %>
                <li class="tools <%= index.even? ? 'black' : 'white' %>"><%= link_to project.name, project.url %></li>
            <% end %>
        </ul>
    </div>

    <div id="bio" class="tab-content active-tab">
        <%= @bio.text %>
    </div>

    <div id="photos" class="tab-content" style="display: none;">
        <div class="row">
            <% @galleries.each_with_index do |gallery, index| %>
                <div class="col-sm-6">
                    <div>
                        <img class="gallery-photo" data-gallery="<%= gallery.id %>" src="assets/gallery_cover_<%= index %>.png"/>
                    </div>

                    <div class="modal fade" id="gallery-<%= gallery.id %>">
                        <%= image_tag 'gallery_logo.png', style: 'position: absolute; top: 15px; left: 15px; width: 80px; height: auto;' %>
                        <%= image_tag 'gallery_x_button.png', style: 'position: absolute; top: 15px; right: 15px; width: 40px; height: auto;' %>
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <% if gallery.images.size > 0 %>
                                        <%= image_tag gallery.images.first.photo.url(:original), data: { parent: index } %>
                                    <% end %>
                                </div>
                                <div class="modal-footer">
                                    <ul>
                                        <% gallery.images.each do |image| %>
                                            <li class="gallery-li"><%= image_tag image.photo.url(:icon), data: { original: image.photo.url(:original), parent: index } %></li>
                                        <% end %>
                                    </ul>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                </div>
            <% end %>
        </div>
    </div>

    <div id="tools" class="tab-content" style="display: none;">
        <ul>
            <% @tools.each_with_index do |tool, index| %>
                <li class="tools <%= index.even? ? 'black' : 'white' %>"><%= link_to tool.text, tool.link %></li>
            <% end %>
        </ul>
    </div>

    <h1 class="tab-link" data-tab="other"><a id="other-projects" href="#">OTHER PROJECTS</a></h1>
    <ul class="social-links">
        <a href="#"><li id="facebook-icon" class="social-icon"></li></a>
        <a href="#"><li id="twitter-icon" class="social-icon"></li></a>
        <a href="#"><li id="youtube-icon" class="social-icon"></li></a>
        <a href="#"><li id="bandcamp-icon" class="social-icon"></li></a>
        <a href="#"><li id="email-icon" class="social-icon"></li></a>
    </ul>
</div>

