    <div class="row">
      <div class="col-sm-12">
        <div class="section3">
          <ul id="music-links">
            <li><a href="<%= @link1.url %>"><img src="assets/1-FoN.png"/></a></li>
            <li><a href="<%= @link2.url %>"><img src="assets/2-IM.png"/></a></li>
            <li><a href="<%= @link3.url %>"><img src="assets/3-SS.png"/></a></li>
