        <div class="section4">
          <%= image_tag 'video_title.png', id: 'video-title' %>

          <% if @videos %>
            <div class='video-detail-wrapper'>
              <% @videos.each_with_index do |v, index| %>
                <iframe data-index="<%= index %>" id="video-<%= index %>" class="video-frame <%= index == 0 ? 'showing' : 'not-showing' %>" width="75%" height="550px" src="//www.youtube.com/embed/<%= v.link %>" frameborder="0" allowfullscreen></iframe>
