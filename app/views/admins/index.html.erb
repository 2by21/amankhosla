<%= link_to 'Home', root_path %>

<h1>Blog Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <div><b><%= link_to post.title, post %></b></div>
      <div>Created at: <%= post.created_at.strftime("%m/%Y") %></div>
      <div><%= post.body[0..50] %></div>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post, method: :delete %>
      <br>
  <% end %>
</ul>

<%= link_to 'New Post', new_post_path %>


<h1>Youtube Videos</h1>

<ul>
  <% @videos.each do |video| %>
    <li>
      <div>Title: <%= link_to video.title, video %></div>
      <div>Body: <%= video.body %></div>
      <div>Link: <%= video.link %></div>
      <%= link_to 'Edit', edit_video_path(video) %>
      <%= link_to 'Destroy', video, method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to 'New Video', new_video_path %>

<h1>Shows</h1>

<% @shows.each do |show| %>
  What: <%= show.what %><br>
  Where: <%= show.where %><br>
  When: <%= show.when.strftime("%m/%d/%y %H%p") %><br>
  How: <%= show.how %><br>
  <%= link_to 'Edit', edit_show_path(show) %>
  <%= link_to 'Destroy', show, method: :delete %>

  <br><br>
<% end %>

<%= link_to 'New Show', new_show_path %>

</br>

<h1>Links</h1>

Example Format: http://www.cheese.com</br></br>

<% @links.each do |link, index| %>
  <%= link.url %> <%= link_to 'Edit', edit_link_path(link) %></br>
<% end %>

<h1>Bio</h1>

<%= link_to 'Edit Bio', edit_bio_path(@bio) %>

<h1>Tools</h1>

<ul>
  <% @tools.each do |tool| %>
    <li>
      <h3><%= link_to tool.text, tool.link %></h3>
      <%= link_to 'Edit', edit_tool_path(tool) %>
      <%= link_to 'Destroy', tool, method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to 'New Tool', new_tool_path %>


<h1>Galleries</h1>

<%= link_to 'New Gallery', new_gallery_path %>
<br><br>
<% @galleries.each do |gallery| %>
  <p>
    <%= link_to gallery.name, gallery %>
    <%= link_to 'Edit', edit_gallery_path(gallery) %>
    <%= link_to 'Destroy', gallery, method: :delete %>
  </p>
<% end %>

<h1>Other Projects</h1>

<%= link_to 'New Other Project', new_project_path %>

<% @projects.each do |project| %>
  <p>
    <h3><%= link_to project.name, project %></h3>
    <%= link_to 'Edit', edit_project_path(project) %>
    <%= link_to 'Destroy', project, method: :delete %>
  </p>
<% end %>