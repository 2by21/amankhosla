<%= form_for @show do |f| %>
<% if @show.errors.any? %>
    <div id="error_explanation">
    <h2>
      <%= pluralize(@show.errors.count, "error") %>
      prohibited this form from being saved:
    </h2>
      <ul>
        <% @show.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>
  <%= f.label :what %></br>
  <%= f.text_field :what %></br>

  <%= f.label :where %></br>
  <%= f.text_field :where %></br>

  <%= f.label :how %></br>
  <%= f.text_field :how %></br>

  <%= f.label :when %></br>
  <%= f.datetime_select :when %></br>

  </br>

  <%= f.submit %>
<% end %>