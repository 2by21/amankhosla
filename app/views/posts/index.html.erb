<h1>Blog Posts</h1>
<ul>
  <% @posts.each do |post| %>
    <li>
      <div><b><%= link_to post.title, post %></b></div>
      <div>Created at: <%= post.created_at.strftime("%m/%Y") %></div>
      <div><%= post.body[0..50] %></div>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post, method: :delete %>
      <br>
      <br/>
  <% end %>
</ul>

<%= link_to 'New Post', new_post_path %>
