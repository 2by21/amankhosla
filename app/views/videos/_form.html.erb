<%= form_for @video do |f| %>
<% if @video.errors.any? %>
    <div id="error_explanation">
    <h2>
      <%= pluralize(@video.errors.count, "error") %>
      prohibited this form from being saved:
    </h2>
      <ul>
        <% @video.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>
  <%= f.label :title %></br>
  <%= f.text_field :title %></br>

  <%= f.label :body %></br>
  <%= f.text_area :body %></br>

  <%= f.label :link %></br>
  <%= f.text_field :link %></br>
  </br>
  <%= f.submit %>
<% end %>