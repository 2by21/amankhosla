<%= form_for @link do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
    <h2>
      <%= pluralize(@link.errors.count, "error") %>
      prohibited this form from being saved:
    </h2>
      <ul>
        <% @link.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :url %>
  <%= f.text_field :url %><br>
  <br>
  <%= f.submit 'Update Link' %>
<% end %>